<resources>
    <style name="Theme.PACrypto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlActivated">@color/main_text_color</item>
    </style>

    <style name="TextHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextMid" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:fontFamily">@font/inter_regular</item>

    </style>

    <style name="CardViewType1" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/background_card</item>
    </style>

    <style name="EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/search_background</item>
    </style>


</resources>
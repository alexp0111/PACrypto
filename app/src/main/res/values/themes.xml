<resources>
    <style name="Theme.PACrypto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextMid" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
</resources>